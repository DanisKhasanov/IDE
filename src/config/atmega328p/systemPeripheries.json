    "ui": {
      "alerts": [
        {
          "severity": "info",
          "message": "Timer1 используется для системных задач: генерация прерываний, точные задержки, измерение длительности импульсов (Input Capture). Для ШИМ используйте таймеры в разделе \"Периферии\".",
          "showWhen": "always"
