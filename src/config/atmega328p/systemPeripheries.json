      "COMPB": {
        "name": "TIMER1_COMPB_vect",
        "description": "Совпадение канала B таймера 1"
      },
      "CAPT": {
        "name": "TIMER1_CAPT_vect",
        "description": "Захват таймера 1"
      }
    },
    "enableInterrupt": true,
    "pinMapping": {
      "pins": []
