{
  "WATCHDOG": {
    "id": "WATCHDOG",
    "name": "Watchdog Timer",
    "config": {
      "timeouts": {
        "name": "Таймаут",
        "type": "select",
        "values": [16, 32, 64, 125, 250, 500, 1000, 2000, 4000, 8000],
        "defaultValue": 1000,
        "ui": {
          "component": "Select",
          "valueType": "number",
          "helperText": "Время срабатывания в миллисекундах"
        }
      },
      "enableWDTInterrupt": {
        "name": "Прерывание watchdog таймера",
        "type": "checkbox",
        "values": [true, false],
        "defaultValue": false,
        "ui": {
          "component": "Checkbox",
          "valueType": "boolean",
          "helperText": "При включении будет использоваться режим \"Прерывание + сброс\", иначе только \"Сброс\""
        }
      }
    },
    "enableInterrupt": false,
    "pinMapping": {
      "pins": []
    },
    "ui": {
      "alerts": [
        {
          "severity": "info",
          "message": "Watchdog Timer используется для защиты от зависания программы. При срабатывании выполняется сброс микроконтроллера. При включении прерывания будет использоваться режим \"Прерывание + сброс\".",
          "showWhen": "always"
        }
      ]
    }
  },
  "TIMER0": {
    "id": "TIMER0",
    "name": "Timer/Counter 0 (Системный)",
    "config": {
      "modes": {
        "name": "Режим",
        "type": "select",
        "values": ["Normal", "CTC"],
        "defaultValue": "CTC",
        "ui": {
          "component": "Select",
          "valueType": "string"
        }
      },
      "prescalers": {
        "name": "Делитель частоты",
        "type": "select",
        "values": [1, 8, 64, 256, 1024],
        "defaultValue": 64,
        "ui": {
          "component": "Select",
          "valueType": "number"
        }
      }
    },
    "interrupts": {
      "OVF": {
        "name": "TIMER0_OVF_vect",
        "description": "Переполнение таймера 0"
      },
      "COMPA": {
        "name": "TIMER0_COMPA_vect",
        "description": "Совпадение канала A таймера 0"
      },
      "COMPB": {
        "name": "TIMER0_COMPB_vect",
        "description": "Совпадение канала B таймера 0"
      }
    },
    "enableInterrupt": true,
    "pinMapping": {
      "pins": []
    },
    "ui": {
      "alerts": [
        {
          "severity": "info",
          "message": "Timer0 используется для системных задач: генерация прерываний, точные задержки. Для ШИМ используйте таймеры в разделе \"Периферии\".",
          "showWhen": "always"
        }
      ]
    }
  },
